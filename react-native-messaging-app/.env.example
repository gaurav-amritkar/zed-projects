# React Native Messaging App Environment Variables
# Copy this file to .env and fill in your values

# Default AI Configuration
DEFAULT_AI_ENDPOINT=http://localhost:11434/api/generate
DEFAULT_AI_MODEL=llama2
DEFAULT_MAX_TOKENS=500
DEFAULT_TEMPERATURE=0.7
DEFAULT_SYSTEM_PROMPT=You are a helpful AI assistant in a messaging app. Be concise, friendly, and helpful in your responses.

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ENDPOINT=https://api.openai.com/v1

# Anthropic Claude Configuration (if using Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_ENDPOINT=https://api.anthropic.com/v1

# Cohere Configuration (if using Cohere)
COHERE_API_KEY=your_cohere_api_key_here
COHERE_ENDPOINT=https://api.cohere.ai/v1

# Local AI Services
OLLAMA_ENDPOINT=http://localhost:11434/api/generate
LOCALAI_ENDPOINT=http://localhost:8080/v1
TEXTGEN_ENDPOINT=http://localhost:5000/api/v1
KOBOLDCPP_ENDPOINT=http://localhost:5001/api/v1

# App Configuration
APP_NAME=Messaging App
APP_VERSION=1.0.0
DEBUG_MODE=false

# Storage Configuration
MAX_MESSAGE_HISTORY=1000
AUTO_CLEANUP_DAYS=30
BACKUP_INTERVAL_HOURS=24

# Network Configuration
REQUEST_TIMEOUT=30000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# UI Configuration
DEFAULT_THEME=light
DEFAULT_FONT_SIZE=medium
ENABLE_ANIMATIONS=true
ENABLE_HAPTICS=true

# Privacy & Security
ENABLE_ENCRYPTION=false
ANALYTICS_ENABLED=false
CRASH_REPORTING_ENABLED=false

# Development
DEV_SERVER_URL=http://localhost:8081
ENABLE_DEBUG_LOGS=false
SHOW_PERFORMANCE_MONITOR=false
