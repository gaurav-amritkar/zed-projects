# Editorial News Aggregator Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://editorial_user:editorial_password@localhost:5432/editorial_news
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis URL for caching and task queue
REDIS_URL=redis://localhost:6379/0
REDIS_DB=0
CACHE_TTL=3600

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
# Celery broker and result backend (using Redis)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# CORS AND SECURITY
# =============================================================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,*

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# OpenAI API Key for GPT-based summarization
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Translate API Key
# Get from: https://cloud.google.com/translate/docs/setup
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# News API Key (optional, for additional news sources)
# Get from: https://newsapi.org/
NEWS_API_KEY=your-news-api-key

# Hugging Face API Token (optional, for additional models)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=your-huggingface-api-token

# Azure Translator Service (alternative to Google Translate)
AZURE_TRANSLATOR_KEY=your-azure-translator-key
AZURE_TRANSLATOR_REGION=eastus

# =============================================================================
# SUMMARIZATION SETTINGS
# =============================================================================
# Default model for text summarization
DEFAULT_SUMMARY_MODEL=facebook/bart-large-cnn
MAX_SUMMARY_LENGTH=150
MIN_SUMMARY_LENGTH=50
SUMMARY_BATCH_SIZE=4

# =============================================================================
# WEB SCRAPING SETTINGS
# =============================================================================
# Request delay between scraping requests (seconds)
REQUEST_DELAY=1.0
# Request timeout (seconds)
REQUEST_TIMEOUT=30
# Maximum retry attempts
MAX_RETRIES=3
# User agent string for web scraping
USER_AGENT=Editorial-News-Aggregator/1.0 (+https://editorial-aggregator.com)

# =============================================================================
# CONTENT SETTINGS
# =============================================================================
# Supported languages (comma-separated language codes)
SUPPORTED_LANGUAGES=en,hi,bn,ta,mr,te,gu,kn,ml,pa
# Default language
DEFAULT_LANGUAGE=en
# Articles per page in API responses
ARTICLES_PER_PAGE=20
# Maximum age of articles to keep (days)
MAX_ARTICLE_AGE_DAYS=30

# =============================================================================
# SCHEDULER SETTINGS
# =============================================================================
# How often to fetch new articles (minutes)
FETCH_INTERVAL_MINUTES=60
# How often to run cleanup tasks (hours)
CLEANUP_INTERVAL_HOURS=24
# How often to run batch summarization (minutes)
SUMMARY_BATCH_INTERVAL_MINUTES=30

# =============================================================================
# FILE STORAGE SETTINGS
# =============================================================================
# Upload directory for files
UPLOAD_DIR=uploads
# Maximum file size in MB
MAX_FILE_SIZE_MB=10
# Allowed file extensions (comma-separated)
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
# Enable Prometheus metrics
ENABLE_METRICS=true
# Metrics server port
METRICS_PORT=8001

# Sentry DSN for error tracking (optional)
# Get from: https://sentry.io/
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# EMAIL SETTINGS (for notifications)
# =============================================================================
# SMTP configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_TLS=true
EMAILS_FROM_EMAIL=noreply@editorial-aggregator.com
EMAILS_FROM_NAME=Editorial News Aggregator

# =============================================================================
# RATE LIMITING
# =============================================================================
# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode for development
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# =============================================================================
# PRODUCTION SETTINGS (uncomment for production)
# =============================================================================
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# DATABASE_ECHO=false
# SECRET_KEY=your-production-secret-key-very-long-and-random
# CORS_ORIGINS=https://yourdomain.com
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================

# AWS S3 Configuration (for file storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=editorial-aggregator-files
# AWS_S3_REGION_NAME=us-east-1

# Elasticsearch Configuration (for advanced search)
# ELASTICSEARCH_HOST=localhost
# ELASTICSEARCH_PORT=9200
# ELASTICSEARCH_INDEX=editorial_articles

# Cloudflare Configuration (for CDN)
# CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
# CLOUDFLARE_ZONE_ID=your-zone-id

# =============================================================================
# SOCIAL MEDIA API KEYS (for content sharing)
# =============================================================================
# Twitter API (for sharing to Twitter)
# TWITTER_API_KEY=your-twitter-api-key
# TWITTER_API_SECRET=your-twitter-api-secret
# TWITTER_ACCESS_TOKEN=your-twitter-access-token
# TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Facebook API (for sharing to Facebook)
# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Use strong, unique passwords and API keys
# 3. Rotate API keys regularly in production
# 4. Consider using environment-specific configuration management tools
# 5. For production, use secure methods to manage secrets (e.g., AWS Secrets Manager)
